{
  "name": "pricing-calculator",
  "version": "1.0.0",
  "description": "Price calculator foundation",
  "main": "src/ui/main.ts",
  "scripts": {
    "test": "vitest run",
    "copy": "cp index.html manifest.json sw.js docs/ && cp -r categories data docs/",
    "build": "npm run build:js && npm run build:css && npm run copy",
    "build:js": "esbuild src/ui/main.ts --bundle --outfile=docs/assets/app.js --platform=browser --format=esm --minify",
    "build:css": "esbuild src/assets/styles.css --minify --outfile=docs/assets/styles.css --allow-overwrite",
    "dev": "esbuild src/ui/main.ts --bundle --outfile=docs/assets/app.js --platform=browser --format=esm --watch",
    "preview": "npx http-server docs",
    "deploy": "npm run build && gh-pages -d docs"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.2",
    "gh-pages": "^6.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
