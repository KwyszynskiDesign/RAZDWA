{
  "name": "razdwa-calculator",
  "version": "1.0.0",
  "description": "Price calculator for RazDwa",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "copy": "cp public/index.html public/manifest.json public/sw.js docs/ && cp -r categories data docs/",
    "build": "npm run build:js && npm run build:css && npm run copy",
    "build:js": "esbuild src/ui/main.ts --bundle --outfile=docs/assets/app.js --platform=browser --format=esm --minify --sourcemap",
    "build:css": "esbuild src/assets/styles.css --minify --outfile=docs/assets/styles.css --allow-overwrite",
    "dev": "esbuild src/ui/main.ts --bundle --outfile=docs/assets/app.js --platform=browser --format=esm --watch",
    "preview": "npx http-server docs",
    "deploy": "npm run build && gh-pages -d docs"
  },
  "devDependencies": {
    "esbuild": "^0.20.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  }
}
